<div style="width:80%;margin:0 auto;">

<h1>Crear Articulo</h1>
<%= form_for(@article) do |f|%>
  <% @article.errors.full_messages.each do |message|%>
    <div class="be-purple white top-space">
      * <%= message%>
    </div>
  <%end%>
  <div class="field">
    <%= f.text_field :title, placeholder: "Titulo", class:"from-control"%>
  </div>
  <div class="field">
    <%= f.text_area :body, placeholder: "Escribe el articulo aqui", style:"height:250px;", class:"from-control" %>
  </div>
  <div class="field">
    <%= f.submit "Guardar", class:"btn be-purple white"%>
  </div>
<%end%>

</div>
